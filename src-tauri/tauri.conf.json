{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "notary",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "scope": ["$HOME/notes", "$HOME/notes/**/*"],
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeFile": true,
        "renameFile": true
      },
      "path": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "clipboard": {
        "writeText": true
      },
      "dialog": {
        "ask": true
      },
      "shell": {
        "open": "^(.+)/([^/]+)$"
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "titleBarStyle": "Overlay",
        "fullscreen": false,
        "hiddenTitle": true,
        "resizable": true,
        "title": "notary",
        "width": 800,
        "height": 600
      }
    ]
  }
}
